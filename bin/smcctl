#!/bin/sh
template=/etc/X11/xorg.conf.tpl

dereference () {
    ls -l "$1" | awk '{print $NF}'
}

smc=`dereference /dev/input/by-path/platform-applesmc.768-event | sed -e 's/\.\.\///'`

case $1 in 
    up)
        mv /dev/input/smc /dev/input/$smc
        ;;
    down)
        mv /dev/input/$smc /dev/input/smc
        ;;
    *)
        echo "Usage: $0 <up|down>"
esac



