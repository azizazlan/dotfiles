#!/bin/sh

dereference () {
    if [ -e $1 ]; then
        ls -l "$1" | awk '{print $NF}'
    else
        return 1
    fi
}

case $sHost in
    richh-imac)
        dev=`dereference /dev/snd/by-id/usb-Logitech_Logitech_USB_Headset-00 | sed -e 's/.*C//'`
        [ $? = 0 ] &&
            case $1 in
                -v)
                    echo $dev;;
                mute)
                    :;;
                *)
                    aumix -d /dev/mixer$dev -w $1;;
            esac
        ;;
esac
